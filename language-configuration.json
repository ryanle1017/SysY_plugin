{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "colorizedBracketPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\"']*$",
        "decreaseIndentPattern": "^\\s*\\}"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*\\{[^}\"']*$",
            "action": { 
                "indent": "indent",
                "appendText": ""
            }
        },
        {
            "beforeText": "^\\s*\\}.*$",
            "action": { "indent": "outdent" }
        },
        {
            "beforeText": "^\\s*\\{[^}\"']*$",
            "afterText": "^\\s*\\}",
            "action": { 
                "indent": "indentOutdent",
                "appendText": ""
            }
        }
    ],
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#region",
            "end": "^\\s*//\\s*#endregion"
        },
        "offSide": true
    }
}
