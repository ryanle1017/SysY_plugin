{
  "name": "sysy-language-support",
  "displayName": "SysY Language Extension",
  "description": "SysY2022语言编辑器插件 - 提供完整的语法高亮、智能提示、错误检测和代码格式化功能",
  "version": "1.0.0",
  "icon": "images/logo.png",
  "keywords": [
    "sysy",
    "compiler",
    "language-support",
    "syntax-highlighting",
    "langium",
    "北京科技大学",
    "编程语言"
  ],
  "author": {
    "name": "乐一然、谭志勇、魏竹松"
  },
  "publisher": "ustb-sysy-team-ryan",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanle1017/SysY_plugin.git"
  },
  "homepage": "https://github.com/ryanle1017/SysY_plugin#readme",
  "bugs": {
    "url": "https://github.com/ryanle1017/SysY_plugin/issues"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc -b tsconfig.src.json && node esbuild.mjs",
    "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.src.json --watch\" \"node esbuild.mjs --watch\"",
    "lint": "eslint src --ext ts",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "prepare:static": "node ./scripts/prepare.js",
    "build:web": "npm run build && npm run prepare:static && npm run build:monarch && npm run build:worker && npm run build:bundle",
    "build:monarch": "tsc -b tsconfig.monarch.json",
    "build:bundle": "vite --config ./vite.bundle.config.ts build",
    "build:worker": "esbuild --minify ./out/language/main-browser.js --bundle --format=iife --outfile=./static/worker/hello-world-server-worker.js",
    "dev": "vite",
    "dev:debug": "vite --debug --force",
    "serve": "npm run dev",
    "test": "vitest run",
    "fix-arrays": "node src/fixArraySize.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify && npm run lint",
    "esbuild-base": "esbuild ./src/extension/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
  },
  "dependencies": {
    "langium": "~3.0.0",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1",
    "chalk": "~5.3.0",
    "commander": "~11.0.0",
    "@codingame/monaco-vscode-editor-service-override": "1.83.16",
    "@codingame/monaco-vscode-keybindings-service-override": "1.83.16",
    "monaco-editor": "npm:@codingame/monaco-editor-treemended@1.83.16",
    "monaco-editor-workers": "~0.44.0",
    "monaco-editor-wrapper": "~3.5.0",
    "monaco-languageclient": "~7.2.0"
  },
  "devDependencies": {
    "vscode": "npm:@codingame/monaco-vscode-api@1.83.16",
    "@types/node": "^18.0.0",
    "@typescript-eslint/parser": "~6.4.1",
    "@typescript-eslint/eslint-plugin": "~6.4.1",
    "eslint": "~8.47.0",
    "langium-cli": "~3.0.0",
    "typescript": "~5.1.6",
    "@types/vscode": "~1.67.0",
    "concurrently": "~8.2.1",
    "esbuild": "~0.19.2",
    "vite": "~4.4.11",
    "vitest": "~1.0.0"
  },
  "engines": {
    "vscode": "^1.67.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sys",
        "aliases": [
          "SysY",
          "sys"
        ],
        "extensions": [
          ".sys"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sys",
        "scopeName": "source.sys",
        "path": "syntaxes/hello-world.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "sysy.quickFixCurrentLine",
        "title": "SysY: 修复当前行的数组大小溢出问题"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == sys",
          "command": "sysy.quickFixCurrentLine",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sysy.quickFixCurrentLine",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorLangId == sys"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:sys"
  ],
  "main": "./out/main.js",
  "bin": {
    "hello-world-cli": "./bin/cli.js"
  },
  "overrides": {
    "monaco-editor": "$monaco-editor",
    "vscode": "$vscode"
  },
  "resolutions": {
    "monaco-editor": "npm:@codingame/monaco-editor-treemended@1.83.16",
    "vscode": "npm:@codingame/monaco-vscode-api@1.83.16"
  }
}
