// SysY 错误检测测试文件

int main() {
    // 测试1: 在非循环中使用break - 应该报错
    int x = 5;
    if (x > 0) {
        break;  // 错误：break不能在非循环中使用
    }

    // 测试2: 在非循环中使用continue - 应该报错
    if (x < 10) {
        continue;  // 错误：continue不能在非循环中使用
    }

    // 测试3: 使用未定义的变量 - 应该报错
    y = 10;  // 错误：y未定义

    // 测试4: 重复声明变量 - 应该报错
    int x = 20;  // 错误：x已经声明过

    // 测试5: 数组大小溢出 - 应该报错
    int arr[3] = {1, 2, 3, 4, 5};  // 错误：初始化元素超过数组大小

    // 测试6: 调用未定义的函数 - 应该报错
    undefinedFunc();  // 错误：函数未定义

    return 0;
}

// 测试7: 函数返回类型错误 - 应该报错
int getValue() {
    return;  // 错误：有返回值的函数不能返回空
}

// 测试8: void函数有返回值 - 应该报错
void doSomething() {
    return 42;  // 错误：void函数不应该有返回值
}